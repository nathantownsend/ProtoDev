@{
    ViewBag.Title = "LegalRightEnter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ePermit</h1>
<article>
    <h2 data-submenu="9">Legal Right to Enter</h2>

    <textarea id='legaltextarea' placeholder="Provide a description of your Legal Right To Enter..."></textarea>
    <br />   
    <fieldset class="setapart">
        <legend>Attachments</legend>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date Uploaded</th>
                    <th>User</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">My First Attachment File.pdf</a></td>
                    <td>3/26/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td><a href="#">My Second Attachment File.pdf</a></td>
                    <td>7/18/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
    </fieldset>
    <fieldset class="setapart">
        <legend>Litigation status</legend>
        <p>Is the applicant(s) right to mine subject of current or pending litigation?</p>
        <p>
            <input id="yes" type="radio" name="radios" value="yes" />Yes
     <input id="no" type="radio" name="radios" value="no" />No
        </p>
       
        <label>Status of Litigation</label>
        <textarea placeholder="If you answered yes above, provide status of litigation..."></textarea>
    </fieldset>
    <button value="Submit" id="ShowComments" title="Deficiency" class="CommentsButton">Deficiency ▼</button>
    <div id="Comments" class="Comments" style="display: none;">@Html.Partial("Deficiency")</div>
    <button class="primary">Save</button>

    <button class="secondary">Reset</button>

</article>

