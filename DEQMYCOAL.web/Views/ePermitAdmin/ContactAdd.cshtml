@*setapart for basic contact information*@

<fieldset class="setapart">
    <legend>Basic Contact Information</legend>
    <label>Contact Type</label>
    <select class="dropdownList">
        <option value="Individual">Individual</option>
        <option value="Business">Business</option>
    </select>
    <div>
        <div style="float: left; padding-right: 1.5em;">
            <label>Salutation</label>
            <select class="dropdownList">
                <option>Mr.</option>
                <option>Mrs.</option>
            </select>
        </div>
        <div style="float: left; padding-right: 1.5em;">
            <label>First Name</label>
            <input type="text" id="FirstName" name="FirstName" required />
        </div>
        <div style="float: left;">
            <label>Last Name</label>
            <input type="text" id="LastName" name="LastName" required />
        </div>
    </div>
    <fieldset style="margin-bottom: 1.5em; background-color: #f8f8f8; /*border-radius: 1em; */ margin-left: -1.1em;">
        <legend></legend>
        <label for="companyname">Company Name</label><input type="text" title="companyname" id="CompanyName" name="CompanyName" required="" />
        <label for="title">Title</label><input type="text" title="title" id="title" name="title" required="" />
        <label for="id">Employer ID or Tax ID</label><input type="text" title="id" id="id" name="id" required="" />
        <label for="telephone">Office Telephone</label><input type="text" title="telephone" id="telephone" name="telephone" required="" />
        <label for="extension">Extension</label><input type="text" title="extension" id="extension" name="extension" required="" />
        <label for="fax">Fax</label><input type="text" title="fax" id="fax" name="fax" required="" />
        <label for="email">Email Address</label><input type="text" title="email" id="email" name="email" required />

    </fieldset>
</fieldset>

