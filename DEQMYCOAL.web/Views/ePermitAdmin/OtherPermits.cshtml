@{
    ViewBag.Title = "OtherPermits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ePermit</h1>


<article>
    <h2 data-submenu="15">Other Permits (Coal & Non-Coal)</h2>

    @*applicant information heading and table*@
    <fieldset class ="setapart">
        <table>
            <thead>
                <tr>
                    <th>Type of Permit</th>
                    <th>Application # or Permit ID</th>
                    <th>Status</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Surface</td>
                    <td>8675309A</td>
                    <td>Inactive</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                </tr>
                <tr>
                    <td>Exploration</td>
                    <td>C2009034</td>
                    <td>Active</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button value="AddNew" title="Other Permits" class="modal3 tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
            <div class="dialogbox3" style="display: none;" title="OtherPermits">
                @Html.Partial("OtherPermitsAdd")
            </div>
        </div>
        </fieldset>
        <button value="Submit" id="ShowComments" title="Deficiency" class="CommentsButton">Deficiency ▼</button>
        <div id="Comments" class="Comments" style="display: none;">@Html.Partial("Deficiency")</div>
        <p>&nbsp;</p>
</article>
