@{
    ViewBag.Title = "NonComplianceSuspensionPermits";
}

<h1>ePermit</h1>

<article>
    <h2 data-submenu="7">Non-Compliance Suspension&nbsp;/&nbsp;Revocation&nbsp;/&nbsp;Bond Forfeiture Of Permits</h2>

    @*applicant information heading and table*@
    <fieldset class="setapart">
        <legend>Compliance with 82-4-251 MCA Attachments</legend>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date Uploaded</th>
                    <th>User</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">My First Attachment File.pdf</a></td>
                    <td>3/26/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
                <tr>
                    <td><a href="#">My Second Attachment File.pdf</a></td>
                    <td>7/18/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
            </tbody>
        </table>


        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
    </fieldset>

    <fieldset class="setapart">
        <legend>Suspension or Revocation</legend>
        <table>
            <thead>
                <tr>
                    <th>Permit ID</th>
                    <th>Date of Issuance</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>C2013025</td>
                    <td>8675309A</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
                <tr>
                    <td>2013-03-03</td>
                    <td>2013-05-31</td>
                    <td style="text-align: center;">
                       <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button value="AddNew" title="Non-Compliance Suspension / Revocation of Permits" class="modal3 tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
            <div class="dialogbox3" style="display: none;" title="NonComplianceSuspensions">
                @Html.Partial("NonComplianceSuspensions")
            </div>
        </div>
    </fieldset>
 
    <fieldset class="setapart">
        <legend>Bond Forfeiture</legend>
        <table>
            <thead>
                <tr>
                    <th>Permit ID</th>
                    <th>Date of Forfeiture</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>C2013011</td>
                    <td>1234309A</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
                <tr>
                    <td>2012-03-03</td>
                    <td>2013-02-28</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                    <button class="delete" title="Delete">Delete</button></td>
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button value="AddNew" title="Non-Compliance Bond Forfeiture of Permits" class="modal2 tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
            <div class="dialogbox2" style="display: none;" title="NonComplianceBondForfeiture">
                @Html.Partial("NonComplianceBondForfeiture")
            </div>
        </div>
    </fieldset>

    <button value="Submit" id="ShowComments" title="Deficiency" class="CommentsButton">Deficiency ▼</button>
    <div id="Comments" class="Comments" style="display: none;">@Html.Partial("Deficiency")</div>

    <button class="primary">Save</button>
</article>

