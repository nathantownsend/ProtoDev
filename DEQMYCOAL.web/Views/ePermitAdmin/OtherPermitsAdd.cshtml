<fieldset class="setapart">
    <legend>Enter Permit Information</legend>
    <label>Type of Permit</label>
    <select>
        <option>Prospecting</option>
        <option>Surface</option>
        <option>Underground</option>
        <option>Uranium</option>
        <option>Other</option>
    </select>
    <label>Status of Application/Permit</label>
    <select>
        <option>Active</option>
        <option>Inactive</option>
        <option>Cessation</option>
        <option>Suspended</option>
        <option>Terminated</option>
        <option>Withdrawn</option>
    </select>
    <label for="description">Description</label><input type="text" size="75" title="description" id="description" name="description" required="" />
    <label for="authorityname">Name of Issuing Authority</label><input type="text" size="45" title="authorityname" id="authorityname" name="authorityname" required="" />
    <label for="applicationid">Application # or Permit ID</label><input type="text" title="applicationid" id="applicationid" name="applicationid" required="" />
    <label>Date of Approval</label><input type="text" title="Approval" class="datepicker" name="Approval" value="mm/dd/yy" required />
    <label>Date of Disapproval</label><input type="text" title="Disapproval" class="datepicker" name="Disapproval" value="mm/dd/yy" required />
    <label for="mshaid">MSHA ID</label><input type="text" title="mshaid" id="mshaid" name="mshaid" required />
    <label for="companyname">Name of Company</label><input type="text" size="45" title="companyname" id="companyname" name="companyname" required />
    <label for="employerid">Employer ID</label><input type="text" title="employerid" id="employerid" name="employerid" required />
</fieldset>

