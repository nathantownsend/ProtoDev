    <label for="title">Title</label><input type="text" title="title" id="title" name="title" required="" />
    <label for="id">Employer ID or Tax ID</label><input type="text" title="id" id="id" name="id" required=""  />
    <label for="telephone">Office Telephone</label><input type="text" title="telephone" id="telephone" name="telephone" required="" />
    <label for="extension">Extension</label><input type="text" title="extension" id="extension" name="extension" required=""  />
    <label for="fax">Fax</label><input type="text" title="fax" id="fax" name="fax" required=""  />
    <label for="email">Email Address</label><input type="text" title="email" id="email" name="email" required  />
        
</fieldset>
</fieldset>

