@*setapart for ownership and control information*@

<fieldset class="setapart">
    <legend>Basic Contact Information</legend>
    <label>Contact Type</label>
    <select class="dropdownList">
        <option value="Individual">Individual</option>
        <option value="Business">Business</option>
    </select>
    <div>
        <div style="float: left; padding-right: 1.5em;">
            <label>Salutation</label>
            <select class="dropdownList">
                <option>Mr.</option>
                <option>Mrs.</option>
            </select>
        </div>
        <div style="float: left; padding-right: 1.5em;">
            <label>First Name</label>
            <input type="text" id="FirstName" name="FirstName" required />
        </div>
        <div style="float: left;">
            <label>Last Name</label>
            <input type="text" id="LastName" name="LastName" required />
        </div>
    </div>
   
 <fieldset style="margin-bottom:.5em;background-color: #f8f8f8;/*border-radius:1em;*/margin-left:-1.1em;">
     @*<legend></legend>*@
