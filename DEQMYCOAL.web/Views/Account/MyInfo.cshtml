<h3>My Information</h3>
<div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { novalidate="" }))
    {
        <div class="float-left" style="width:45%;">
                
            <h4>Personal</h4>

            <label>First Name</label>
            <input type="text" />
                
            <label>Last Name</label>
            <input type="text" />
                
        
            <label>Title</label>
            <input type="text" />

            <label>Company Name</label>
            <input type="text" />
        </div>
        
        <div class="float-left" style="width:45%;">
            <h4>Contact</h4>

            <label>Address</label>
            <input type="text" />
            
            <label>City</label>
            <input type="text" />

            <label>State</label>
            <select><option>Montana</option></select>

            <label>Zip Code</label>
            <input type="text" />

            <div class="PhoneEntry">
                <div>
                    <label class="tiny-text">Country</label>
                    <input type="text" size="1" />
                </div>

                <div>
                    <label class="tiny-text">Phone</label>
                    <input type="text" size="14"/>
                </div>

                <div>
                    <label class="tiny-text">Ext</label>
                    <input type="text" size="5"/>
                </div>
            </div>
            <div style="clear:both;"></div>

            <label>Email</label>
            <input type="text" />

        </div>
                
        <div>
            <input type="submit" class="primary" value="Save" />
            <input type="reset" class="secondary" value="Reset" />
        </div>
    }
</div>