@{
    ViewBag.Title = "PremineLandUse";
}

<h1>ePermit</h1>

<article>
    <h2 data-submenu="9">Premine Land Use</h2>

    <fieldset class="setapart" style="padding-top: 0em;">
        <legend></legend>
        <p>Has any portion of the proposed permit area been previously mined?</p>
        <p>
            <input id="yes" type="radio" name="radios" value="yes" />Yes
     <input id="no" type="radio" name="radios" value="no" />No
        </p>
        <p style="color: #f26522;">If Yes, include all applicable information required under 17.24.304(1)(l)(ii)(C) in the Premine Land Use Report.</p>
        <h4>Attachments</h4>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date Uploaded</th>
                    <th>User</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">My First Attachment File.pdf</a></td>
                    <td>3/26/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                         <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
                </tr>
                <tr>
                    <td><a href="#">My Second Attachment File.pdf</a></td>
                    <td>7/18/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                         <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
    </fieldset>

    <fieldset class="setapart">
        <legend></legend>
        <table>
            <!-- First row -->
            <thead>
                <tr>
                    <th style="width: 35em;">Premine Land Use               </th>
                    <th>Acres</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <!-- Second row -->
            <tbody>
                <tr>
                    <td>
                        <input style="width: 100%" type="text" id="premine" name="premine" required="" value="Cattle Grazing" /></td>
                    <td>
                        <input style="width: 100%" class="textalignright" type="text" id="acres" name="acres" required="" value="31" /></td>
                    <td style="text-align: center;">
                         <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
                </tr>

                <tr>
                    <td>
                        <input style="width: 100%" type="text" name="premine" required="" value="Haunted House Plantation" /></td>
                    <td>
                        <input style="width: 100%" class="textalignright" type="text" name="acres" required="" value="56" /></td>
                    <td style="text-align: center;">
                         <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
                </tr>

                <tr>
                    <td style="border-right-color: transparent; border-top-color: transparent; border-bottom-color: transparent; border-left-color: transparent;"></td>
                    <td style="border-right-color: transparent; border-top-color: transparent; border-bottom-color: transparent; border-left-color: transparent;">
                        <p style="clear: both; white-space: pre-wrap; font-size: 1.1em; font-weight: 600;">Total:    87 </p>
                    </td>  
                </tr>
            </tbody>
        </table>
        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
    </fieldset>

    @*premine land use map layers and attachments*@

    <fieldset class="setapart">
        <legend>Premine Land Use Maps</legend>
        <h4>Required Map Layers:</h4>
        <div class="checkboxes">
            <input type="checkbox" name="LandUse" value="x" checked="checked" />Premine Land Use (17.24.304(1)(l)))
            <br />
            <input type="checkbox" name="LandUse" value="x" checked="checked" />Historic Land Use (17.24.304(1)(l)) &nbsp &nbsp <a href="#">MAP</a>
            <br />
            <input type="checkbox" name="LandUse" value="x" checked="checked" />Premine Topography (17.24.304(1)(l))                
        </div>
             <h4>Attachments</h4>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Satisfied Map Layers</th>
                    <th>Date Uploaded</th>
                    <th>User</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">LandThatMineForgot.pdf</a></td>
                    <td>
                        <select class="dropdownListMaps">
                            <option>Premine Land Use (17.24.304(1)(l)))</option>
                            <option>Premine Topography (17.24.304(1)(l))</option>
                        </select>
                    </td>
                    <td>3/26/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                        <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
    </fieldset>
    <button value="Submit" id="ShowComments" title="Deficiency" class="CommentsButton Primary">Deficiency ▼</button>
    <div id="Comments" class="Comments" style="display: none;">@Html.Partial("Deficiency")</div>
    <div>
        <button class="primary">Save</button>
        <button class="secondary">Reset</button>
    </div>
</article>

