@{
    ViewBag.Title = "VegetationSurvey";
}


<h1>ePermit</h1>

<article>
    <h2 data-submenu="6">Vegetation Survey</h2>

    <fieldset class="setapart">
        <legend>Vegetation Survey Report Attachments</legend>
        @Html.Partial("_attachmentTable")
    </fieldset>

    <fieldset class="setapart">
        <legend></legend>
        <table id="tableproperties" style="clear: both; width: 100%;">
            <!-- First row -->
            <tr>
                <th style="width: 35em;">Vegetation Community Types List</th>
                <th>Acres</th>
                <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
            </tr>
            <!-- Second row -->
            <tr>
                <td>
                    <input style="width: 100%" type="text" id="community" name="community" required="" value="Inner City" /></td>
                <td>
                    <input style="width: 100%" class="textalignright" type="text" id="acres" name="acres" required="" value="1" /></td>
                <td style="text-align: center;">
                     <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
            </tr>
            <tr>
                <td>
                    <input style="width: 100%" type="text" name="community" required="" value="Migrant Farm" /></td>
                <td>
                    <input style="width: 100%" class="textalignright" type="text" name="acres" required="" value="36" /></td>
                <td style="text-align: center;">
                     <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
            </tr>
            <tr>
                <td style="border-right-color: transparent; border-top-color: transparent; border-bottom-color: transparent; border-left-color: transparent;"></td>
                <td style="border-right-color: transparent; border-top-color: transparent; border-bottom-color: transparent; border-left-color: transparent;">
                    <p style="clear: both; white-space: pre-wrap; font-size: 1.1em; font-weight: 600;">Total:    37 </p>
                </td>
            </tr>
        </table>
        <div class="text-right" style="text-align: right;">
            <button class="tertiary"><span class="plussymbol">+</span>&nbsp;Add New</button>
        </div>
        </fieldset>
    

    <fieldset class="setapart">
        <legend>Vegetation Community Maps</legend>
        <h4>Required Map Layers:</h4>
        <div class="checkboxes">
            <input disabled="disabled" type="checkbox" name="VegetationTypes" value="x" checked="checked" /><a href="@Url.Action("Maps", "ePermitMaps")">Vegetation Community Types (17.24.304(1)(i))</a>
        </div>

        <h4>Attachments</h4>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Satisfied Map Layers</th>
                    <th>Date Uploaded</th>
                    <th>User</th>
                    <th style="text-align: center;">Edit&nbsp;/&nbsp;Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="@Url.Action("Maps", "ePermitMaps")">VedgeV8.pdf</a></td>
                    <td>
                        <select class="dropdownListMaps">
                            <option>Vegetation Community Types (17.24.304(1)(i))</option>
        
                        </select>
                    </td>
                    <td>3/26/2013</td>
                    <td>JB</td>
                    <td style="text-align: center;">
                         <button class="edit" title="Edit">Edit</button>
                        <button class="delete" title="Delete">Delete</button>
                        </td>
                </tr>
            </tbody>
        </table>

        <div class="text-right" style="text-align: right;">
            <button class="modal22 tertiary" title="Add New Map"><span class="plussymbol">+</span>&nbsp;Add New</button>
            <div class="dialogbox22" style="display: none;" title="Add New Map">
                @Html.Partial("_addNewMap", false)
            </div>
        </div>
    </fieldset>
    <button value="Submit" id="ShowComments" title="Deficiency" class="CommentsButton Primary">Deficiency ▼</button>
    <div id="Comments" class="Comments" style="display: none;">@Html.Partial("Deficiency")</div>
    <p>&nbsp;</p>
    
</article>

